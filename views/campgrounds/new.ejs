<% include ../partials/header %>


  <div class="container">
    <div style="display: block;" class="row">
      <h1 id="bro"style="text-align: center; margin-top: 20px;">Create a New Camp Ground</h1>


      <!-- <div class="side-row">
        <i id="plusURL" class="fa fa-plus-square-o" aria-hidden="true"></i>
      </div> -->
        <div style="width: 30%; margin: 35px auto;">
          <form action="/campgrounds" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" placeholder="name" name="name" value="">
            </div>
            <div class="form-group">
              <input id="plusURL"class="form-control" type="text" placeholder="img url" name="image" value="">
            </div>
            <div class="form-group hidden hiddenURL">
              <input class="form-control" type="text" placeholder="img url" name="image2" value="">
            </div>
            <div class="form-group hidden hiddenURL">
              <input class="form-control" type="text" placeholder="img url" name="image3" value="">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" placeholder="description" name="description" value="">
            </div>
            <div class="form-group">
              <input class="form-control" type="number" placeholder="$/night" name="price" min="1" value="">
            </div>
            <div class="form-group">
              <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
            </div>
          </form>
          <a href="/campgrounds">Back</a>
        </div>

    </div>


  </div>


