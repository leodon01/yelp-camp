<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <h1 style="text-align: center">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 35px auto">
          <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]" value="">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]" value="">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]" value="">
            </div>
            <div class="form-group">
              <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
            </div>
          </form>
          <a href="/campgrounds">Back</a>
        </div>

    </div>


  </div>
    <% include ../partials/footer %>
